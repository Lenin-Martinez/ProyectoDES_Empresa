@model IEnumerable<ProyectoDES_Empresa.Models.Compra>

@{
    ViewData["Title"] = "Listado";
}

<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="~/css/Create.css" />
    <link rel="stylesheet" href="~/css/Index.css" />

</head>
<body>
    <div class="container">
        <h3>REGISTRO DE COMPRAS</h3>
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Compras" asp-action="Create">Registrar nueva compra </a></li>
                        <li class="breadcrumb-item active" aria-current="page">Listado de Compras</li>
                    </ol>
                </nav>
            </div>
        </div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnidadesCompra)
            </th>
            <th>Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedor.NombreProveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Categoria.NombreCategoria) - @Html.DisplayFor(modelItem => item.Producto.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnidadesCompra)
            </td>
            <td >
                  <button class="btn btn-info btn-pressure btn-sensitive">
                        <a asp-action="Edit" asp-route-id="@item.ID">Editar</a>
                  </button>
                  <button class="btn btn-success">
                         <a asp-action="Details" asp-route-id="@item.ID">Detalles</a>
                  </button>
                  <button class="btn btn-danger">
                          <a asp-action="Delete" asp-route-id="@item.ID">Eliminar</a>
                    </button>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>

