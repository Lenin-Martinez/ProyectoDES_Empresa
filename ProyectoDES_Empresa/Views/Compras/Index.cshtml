@model IEnumerable<ProyectoDES_Empresa.Models.Compra>

@{
    ViewData["Title"] = "Compras";
}

<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="~/css/Create.css" />
    <link rel="stylesheet" href="~/css/Index.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">
</head>
<body>
    <div class="container">
        <div class="contenedorInterno">

            @* Sección Título *@
            <div class="row align-items-center mb-3">
                <div class="col">
                    <h3>REGISTRO DE COMPRAS</h3>
                </div>
                <div class="col text-right">
                    <a asp-area="" asp-controller="Compras" asp-action="Create" class="btn btn-raised btn-primary">Agregar compra</a>
                </div>
            </div>

            @* Sección de Búsqueda *@
            <div class="row">
                <div class="col">
                    <div class="p-0" style="padding-bottom: 0.5rem;">
                        <form asp-controller="Compras" asp-action="Index" method="get">
                            <div class="form-group d-flex align-items-center mb-0">
                                <dl class="row">
                                    <dd class="filtros1">
                                        <input type="date" name="fechaInicioTexto" class="form-control" placeholder="Fecha Inicial (DD/MM/YYYY)" />
                                    </dd>
                                    <dd class="filtros1">
                                        <input type="date" name="fechaFinTexto" class="form-control" placeholder="Fecha Final (DD/MM/YYYY)" />
                                    </dd>
                                    <dd class="filtros2">
                                        <input type="text" name="categoriaABuscar" class="form-control" placeholder="Buscar categoría..." />
                                    </dd>
                                    <dd class="filtros2">
                                        <input type="text" name="productoABuscar" class="form-control" placeholder="Buscar producto..." />
                                    </dd>
                                    <dd class="filtros2">
                                        <input type="text" name="descripcionABuscar" class="form-control" placeholder="Buscar descripción..." />
                                    </dd>
                                    <dd class="filtros3">
                                        <button type="submit" class="btn btn-raised btn-primary btn-just-icon btn-sm">
                                            <i class="material-icons">search</i>
                                        </button>
                                    </dd>
                                </dl>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            @* Sección de Tabla *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor)
            </th>
            <th>
                Categoria
            </th>
            <th>
                Nombre Producto
            </th>
            <th>
                Descripción
            </th>
            <th>
                Unidades
            </th>
            <th>
                Costo($)
            </th>
            <th>Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedor.NombreProveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Categoria.NombreCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.DescripcionProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnidadesCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.CostoProducto)
            </td>
            <td class="td-actions">
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-raised btn-primary btn-just-icon btn-sm" rel="tooltip" data-original-title="" title="">
                    <i class="material-icons">edit</i>
                </a>
                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-raised btn-secondary btn-just-icon btn-sm" rel="tooltip" data-original-title="" title="">
                    <i class="material-icons">info</i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-just-icon btn-sm" rel="tooltip" data-original-title="" title="">
                    <i class="material-icons">delete</i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</div>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>

