@model ProyectoDES_Empresa.ViewModels.UsuarioVM;

<html>
<head>
    <title>Registrar Usuario Nuevo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Create.css" />
</head>
<body>

    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    Registrar Usuario Nuevo
                </div>
                <div class="card-body">

                    <form asp-controller="Usuarios" asp-action="Registrar" method="post">
                        <input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="CorreoUsuario" />
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="ClaveUsuario" />
                        <input class="form-control mb-3" type="password" placeholder="Confirmar Contraseña" required asp-for="ConfirmarClaveUsuario" />
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Registrar</button>
                        </div>


                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>








    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
