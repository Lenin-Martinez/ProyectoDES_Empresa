@model ProyectoDES_Empresa.ViewModels.UsuarioVM

@{
    ViewData["Title"] = "Registrar Usuario Nuevo";
}

<html>
<head>
    <title>Registrar Usuario Nuevo</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="~/css/Create.css" />
    <link rel="stylesheet" href="~/css/Index.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">
</head>
<body>
   <div class="container">
      <h3> REGISTRAR USUARIO NUEVO</h3>
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Usuarios" asp-action="Index">Lista de Usuarios</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Registrar Usuario</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        Ingrese la información del nuevo usuario
                    </div>
                    <div class="col-md-7 card-body">
                        <form asp-action="Registrar" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @if (ViewBag.ErrorClave != null)
                            {
                                <div id="error-message" class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @ViewBag.ErrorClave
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            @if (ViewBag.RegistroExitoso != null)
                            {
                                <div id="success-message" class="alert alert-success alert-dismissible fade show" role="alert">
                                    @ViewBag.RegistroExitoso
                                </div>
                            }
                            <div class="form-group">
                                <label asp-for="CorreoUsuario" class="control-label">Correo de Usuario</label>
                                <input asp-for="CorreoUsuario" class="form-control" placeholder="Correo" required />
                                <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ClaveUsuario" class="control-label">Contraseña</label>
                                <input asp-for="ClaveUsuario" class="form-control" type="password" placeholder="Contraseña" required />
                                <span asp-validation-for="ClaveUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmarClaveUsuario" class="control-label">Confirmar contraseña</label>
                                <input asp-for="ConfirmarClaveUsuario" class="form-control" type="password" placeholder="Confirmar Contraseña" required />
                                <span asp-validation-for="ConfirmarClaveUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Registrar" class="btn btn-raised btn-primary" />
                                <a asp-action="Index" class="btn btn-raised btn-secondary">Regresar</a>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
   </div>
    <br />
    <br />
    <br />
    <br />

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
       // Temporizador del Viewbag
        document.addEventListener("DOMContentLoaded", function () {
            var successMessage = document.getElementById("success-message");
            if (successMessage) {
                setTimeout(function () {
                    successMessage.style.display = "none";
                }, 3000);
            }
        });
    </script>
</body>
</html>

